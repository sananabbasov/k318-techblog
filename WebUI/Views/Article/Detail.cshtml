                                                <div class="hovereffect">
                                                    <span class=""></span>
                                                </div><!-- end hover -->
                                            </a>
                                        </div><!-- end media -->
                                        <div class="blog-meta">
                                            <h4><a href="/article/detail/@similar.Id" title="">@similar.Title</a>
                                            </h4>
                                            <small><a href="blog-category-01.html" title="">Trends</a></small>
                                            <small><a href="blog-category-01.html" title="">21 July, 2017</a></small>
                                        </div><!-- end meta -->
                                    </div><!-- end blog-box -->
                                </div>

                                <!-- end col -->
                            }

                        </div><!-- end row -->
                    </div><!-- end custom-box -->

                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">@Model.Comments.Count() Comments</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="comments-list">
                                    @if (Model.Comments.Any())
                                    {
                                        foreach (var comment in Model.Comments)
                                        {
                                            <div class="media">
                                                <a class="media-left" href="#">
                                                    <img src="~/vendors/upload/author.jpg" alt="" class="rounded-circle">
                                                </a>
                                                <div class="media-body">
                                                    <h4 class="media-heading user_name">@comment.User.FirstName @comment.User.LastName <small>5 days
                                                            ago</small></h4>
                                                    <p>@comment.Content</p>
                                                    <a href="#" class="btn btn-primary btn-sm">Reply</a>
                                                </div>
                                            </div>
                                        }
                                    }else{
                                        <div class="alert alert-info">No comments yet! Be the first to leave a comment.</div>
                                    }



                                </div>
                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!-- end custom-box -->

                    <hr class="invis1">

                    <div class="custombox clearfix">
                        <h4 class="small-title">Leave a Reply</h4>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    <form action="/Article/AddComment" method="post" class="form-wrapper">
                                        <textarea name="Content" class="form-control" placeholder="Your comment"></textarea>
                                        <input type="hidden" name="ArticleId" value="@Model.Article.Id">
                                        <input type="submit" class="btn btn-primary" value="Submit Comment" />
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    <a href="/auth/login" class="btn btn-primary">Login</a>
                                </div>
                            </div>
                        }
