@model List<Tag>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/tag/create">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Articles</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Articles</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.TagName</td>
                            <td>@tag.CreatedDate</td>
                            <td>@tag.ArticleTags.Count()</td>
                            <td>
                                @{
                                    if (tag.IsDeleted)
                                    {
                                        <button class="btn btn-danger btn-sm">Deleted</button>
                                    }
                                    else if (tag.IsActive)
                                    {
                                        <button class="btn btn-success btn-sm">Active</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm">De active</button>
                                    }
                                }
                            </td>
                            <td>
                                @if (!tag.IsDeleted)
                                {
                                    <a class="btn btn-outline-danger btn-sm">Delete</a>
                                    <a href="/dashboard/category/edit/@tag.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>