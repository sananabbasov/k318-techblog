@model List<Article>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Tags</th>
                        <th>Views</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Tags</th>
                        <th>Views</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>
                                <img width="100" height="100" src="@article.PhotoUrl" />
                            </td>
                            <td>@article.Title</td>
                            <td>@article.Category.CategoryName</td>
                            <td>
                                @{
                                    foreach (var tag in article.ArticleTags)
                                    {
                                        <span class="btn btn-outline-success btn-sm">@tag.Tag.TagName</span>
                                    }
                                }
                            </td>
                            <td>@article.ViewCount</td>
                            <td>
                                @{
                                    if (article.IsDeleted)
                                    {
                                        <button class="btn btn-danger btn-sm">Deleted</button>
                                    }
                                    else if (article.IsActive)
                                    {
                                        <button class="btn btn-success btn-sm">Active</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm">De active</button>
                                    }
                                }
                            </td>
                            <td>
                                @if (!article.IsDeleted)
                                {
                                    <a class="btn btn-outline-danger btn-sm">Delete</a>
                                    <a href="/dashboard/article/edit/@article.Id"
                                        class="btn btn-outline-warning btn-sm">Edit</a>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>